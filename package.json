{
  "name": "image-recognition-calculator",
  "version": "1.0.0",
  "description": "A calculator that can read math expressions from images using Google Cloud Vision API",
  "main": "server/server.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "cd server && GOOGLE_APPLICATION_CREDENTIALS=$(pwd)/service-account.json node server.js",
    "start": "concurrently \"npm run server\" \"npm run dev\"",
    "install:all": "npm install && cd server && npm install"
  },
  "keywords": ["calculator", "ocr", "google-cloud-vision", "math", "image-recognition"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "vite": "^5.0.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "mathjs": "^12.0.0"
  }
}
